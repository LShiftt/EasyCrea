{% extends 'layout.html.twig' %}
{% block title %}
	Ajouter une carte au deck - {{parent()}}
{% endblock %}
{% block content %}
	<main class="container">
		<h1>Ajouter une carte dans le deck :
			{{res.titre_deck}}</h1>
		<div
			class="container">
			{% for i in range(1, res.nb_cartes) %}
				{% if loop.index == resRng.ordre_soumission %}
					<div style="border: 3px solid black; border-radius: 10px;">
						<h4 class="">{{resRng.texte_carte}}</h4>
						<hr class="">
						<div class=".col-md-2">
							<h5 class="">Choix n°1</h5>
							<p>Population :
								{{resRng.valeurs_choix1_pop}}</p>
							<p>Finance :
								{{resRng.valeurs_choix1_fin}}</p>
						</div>
						<hr class="">
						<div class=".col-md-2">
							<h5 class="">Choix n°2</h5>
							<p>Population :
								{{resRng.valeurs_choix2_pop}}</p>
							<p>Finance :
								{{resRng.valeurs_choix2_fin}}</p>
						</div>
					</div>

				{% else %}
					<div style="border: 3px solid black; border-radius: 10px;">
						<h4 class="">Carte n°
							{{loop.index}}</h4>
					</div>
				{% endif %}
			{% endfor %}
		</div>

	</br>
  <form action="{{ url('/deck/add') }}" method="post" class="w-50" enctype="multipart/form-data">
	<div class="mb-3">
		<label class="form-label">
			Texte
			<span class="required-info">*</span>
			:
		</label>
		<textarea name="texte" class="form-control w-50" required minlength="50" maxlength="280"></textarea>
	</div>
	<div class="mb-3">
		<label class="form-label">
			Choix n°1
			<span class="required-info">*</span>:
		</label>
		<div>
			<input name="population1" type="number" placeholder="Population"/>
			<input name="finance1" type="number" placeholder="Finance"/>
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">
			Choix n°2
			<span class="required-info">*</span>:
		</label>
		<div>
			<input name="population2" type="number" placeholder="Population"/>
			<input name="finance2" type="number" placeholder="Finance"/>
		</div>
	</div>
  	<div class="mb-3">
		<div>
			<input name="idDeck" type="hidden" value="{{res.id_deck}}" />
		</div>
	</div>

	<p class="text-danger fs-6">Les données marquées d'une astérisque sont obligatoires.</p>
	<button type="submit" class="btn btn-primary">Enregistrer ?</button>
	<a href="{{ url('/') }}" class="btn btn-link text-black">annuler</a>
</form></main>{% endblock %}
